<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="vpchc.prohealth.MainActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingTop="20dp"
        android:columnCount="3"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:id="@+id/gridLayout">


        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:src="@drawable/contactus2"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:layout_marginRight="65dp"
            android:src="@drawable/providers2"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:src="@drawable/locations2"
            />
        <TextView
            android:id="@+id/text_contact_us"
            android:text="@string/icon_contact_us"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="35dp"
            />
        <TextView
            android:id="@+id/text_providers"
            android:text="@string/icon_providers"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="35dp"
            />
        <TextView
            android:id="@+id/text_locations"
            android:text="@string/icon_locations"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginBottom="35dp"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:src="@drawable/forms2"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:src="@drawable/patientportal2"
        />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:src="@drawable/programs2"
            />
        <TextView
            android:id="@+id/text_forms"
            android:text="@string/icon_forms"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginLeft="18dp"
            android:layout_marginBottom="35dp"
            />
        <TextView
            android:id="@+id/text_patient_portal"
            android:text="@string/icon_patient_portal"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/text_programs"
            android:text="@string/icon_programs"
            android:textColor='#000000'
            android:textSize="20sp"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@drawable/bustracker2"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:src="@drawable/jobs2"
            />
        <ImageView
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"
            android:layout_weight="1"
            android:src="@drawable/facebook2"
            />
        <TextView
            android:id="@+id/text_bustracker"
            android:text="@string/icon_bustracker"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            />
        <TextView
            android:id="@+id/text_job_openings"
            android:text="@string/icon_job_openings"
            android:textColor='#000000'
            android:textSize="20sp"
            android:layout_marginLeft="14dp"
            />
        <TextView
            android:id="@+id/text_facebook"
            android:text="@string/icon_facebook"
            android:textColor='#000000'
            android:textSize="20sp"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/feedback"/>
    </LinearLayout>

</LinearLayout>

